<%- include('../partials/header', { title, activePage }) %>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1 class="hero-title">Birlikte Daha Güçlüyüz!</h1>
            <p class="hero-subtitle">
                Günlük meydan okumalara katıl, takım kur, yarış ve ödüller kazan!
                <br>Fitness'tan fotoğrafçılığa, koddan sanata binlerce meydan okuma seni bekliyor.
            </p>
            <div class="hero-buttons">
                <a href="/challenges" class="btn btn-primary">Meydan Okumalara Göz At</a>
                <a href="/register" class="btn btn-secondary">Hemen Katıl</a>
            </div>
        </div>
    </section>

    <!-- Categories + Featured Challenges Side by Side -->
    <section class="content-section" style="padding: 4rem 0;">
        <div class="container">
            <div style="display: grid; grid-template-columns: 300px 1fr; gap: 2rem; align-items: start;">

                <!-- Sol: Kategoriler -->
                <div>
                    <h2 class="section-title" style="margin-bottom: 1.5rem;">Popüler Kategoriler</h2>
                    <div id="categoriesGrid" style="display: flex; flex-direction: column; gap: 1rem;">
                        <!-- Kategoriler dinamik yüklenecek -->
                    </div>
                </div>

                <!-- Sağ: Meydan Okumalar -->
                <div>
                    <div class="section-header" style="margin-bottom: 1.5rem;">
                        <h2 class="section-title">Öne Çıkan Meydan Okumalar</h2>
                        <a href="/challenges" class="view-all">Tümünü Gör →</a>
                    </div>
                    <div id="featuredChallenges" style="display: flex; flex-direction: column; gap: 1rem;">
                        <!-- Meydan Okumalar dinamik yüklenecek -->
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats">
        <div class="container">
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">👥</div>
                    <div class="stat-number" id="totalUsers">0+</div>
                    <div class="stat-label">Aktif Kullanıcı</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">🏆</div>
                    <div class="stat-number" id="activeChallenges">0</div>
                    <div class="stat-label">Aktif Meydan Okuma</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">📸</div>
                    <div class="stat-number" id="totalSubmissions">0+</div>
                    <div class="stat-label">Gönderi</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">🎁</div>
                    <div class="stat-number" id="totalPoints">0+</div>
                    <div class="stat-label">Puan Dağıtıldı</div>
                </div>
            </div>
        </div>
    </section>

<%- include('../partials/footer', { customScripts: ['/js/main.js'] }) %>
