<%- include('../partials/header', { title, activePage }) %>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1 class="hero-title">Birlikte Daha Güçlüyüz!</h1>
            <p class="hero-subtitle">
                Günlük meydan okumalara katıl, takım kur, yarış ve ödüller kazan!
                <br>Fitness'tan fotoğrafçılığa, koddan sanata binlerce meydan okuma seni bekliyor.
            </p>
            <div class="hero-buttons">
                <a href="/challenges" class="btn btn-primary">Meydan Okumalara Göz At</a>
                <a href="/register" class="btn btn-secondary">Hemen Katıl</a>
            </div>
        </div>
    </section>

    <!-- Instagram-style Feed Section -->
    <section class="content-section" style="padding: 3rem 0;">
        <div class="container">
            <div class="section-header" style="margin-bottom: 2rem;">
                <h2 class="section-title">🎨 Gönderiler</h2>
                <p style="color: var(--text-light); margin-top: 0.5rem;">Topluluğumuzdan en beğenilen içerikler</p>
            </div>
            <!-- Feed Tabs -->
            <div id="feedTabs"></div>
            <div id="feedContainer" class="feed-grid">
                <!-- Feed dinamik yüklenecek -->
            </div>
        </div>
    </section>

    <!-- Categories Horizontal Scroll -->
    <section style="padding: 2rem 0; background: var(--bg);">
        <div class="container">
            <h2 class="section-title" style="margin-bottom: 1.5rem;">📂 Kategoriler</h2>
            <div id="categoriesGrid" style="display: flex; gap: 0.75rem; flex-wrap: wrap; padding-bottom: 1rem;">
                <!-- Kategoriler dinamik yüklenecek -->
            </div>
        </div>
    </section>

    <!-- Team Challenges Section -->
    <section class="content-section" style="padding: 3rem 0; background: linear-gradient(135deg, rgba(99, 102, 241, 0.05), rgba(16, 185, 129, 0.05));">
        <div class="container">
            <div class="section-header" style="margin-bottom: 1.5rem;">
                <h2 class="section-title">👥 Takım Meydan Okumaları</h2>
                <p style="color: var(--text-light); margin-top: 0.5rem;">Arkadaşlarınla takım kur ve birlikte yarışın!</p>
            </div>
            <div id="teamChallenges" style="display: flex; flex-direction: column; gap: 1rem;">
                <!-- Takım Meydan Okumaları dinamik yüklenecek -->
            </div>
        </div>
    </section>

    <!-- Featured Challenges Section -->
    <section class="content-section" style="padding: 3rem 0;">
        <div class="container">
            <div class="section-header" style="margin-bottom: 1.5rem;">
                <h2 class="section-title">🎯 Öne Çıkan Meydan Okumalar</h2>
                <a href="/challenges" class="view-all">Tümünü Gör →</a>
            </div>
            <div id="featuredChallenges" style="display: flex; flex-direction: column; gap: 1rem;">
                <!-- Meydan Okumalar dinamik yüklenecek -->
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats">
        <div class="container">
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">👥</div>
                    <div class="stat-number" id="totalUsers">0+</div>
                    <div class="stat-label">Aktif Kullanıcı</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">🏆</div>
                    <div class="stat-number" id="activeChallenges">0</div>
                    <div class="stat-label">Aktif Meydan Okuma</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">📸</div>
                    <div class="stat-number" id="totalSubmissions">0+</div>
                    <div class="stat-label">Gönderi</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">🎁</div>
                    <div class="stat-number" id="totalPoints">0+</div>
                    <div class="stat-label">Puan Dağıtıldı</div>
                </div>
            </div>
        </div>
    </section>

<%- include('../partials/footer', { customScripts: ['/js/main.js'] }) %>
