    <!-- Footer -->
    <footer class="footer" style="background: var(--card-bg); border-top: 1px solid var(--border); padding: 2rem 0; margin-top: 4rem;">
        <div class="container" style="text-align: center;">
            <!-- Logo -->
            <div style="display: flex; align-items: center; justify-content: center; gap: 0.5rem; margin-bottom: 1rem;">
                <img src="/assets/images/logo-icon.svg" alt="HHB" style="height: 28px;">
                <span style="font-weight: 800; font-size: 1.1rem; background: linear-gradient(135deg, #6366f1 0%, #10b981 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Haydi Hep Beraber</span>
            </div>

            <!-- Legal Links -->
            <div style="display: flex; justify-content: center; gap: 1.5rem; margin-bottom: 1rem; flex-wrap: wrap;">
                <a href="/privacy-policy" style="color: var(--text-light); text-decoration: none; font-size: 0.85rem; transition: color 0.2s;" onmouseover="this.style.color='var(--primary)'" onmouseout="this.style.color='var(--text-light)'">Gizlilik Politikası</a>
                <a href="/kvkk" style="color: var(--text-light); text-decoration: none; font-size: 0.85rem; transition: color 0.2s;" onmouseover="this.style.color='var(--primary)'" onmouseout="this.style.color='var(--text-light)'">KVKK Aydınlatma Metni</a>
                <a href="/terms" style="color: var(--text-light); text-decoration: none; font-size: 0.85rem; transition: color 0.2s;" onmouseover="this.style.color='var(--primary)'" onmouseout="this.style.color='var(--text-light)'">Kullanım Şartları</a>
                <a href="/cookies" style="color: var(--text-light); text-decoration: none; font-size: 0.85rem; transition: color 0.2s;" onmouseover="this.style.color='var(--primary)'" onmouseout="this.style.color='var(--text-light)'">Çerez Politikası</a>
            </div>

            <!-- Copyright -->
            <p style="color: var(--text-light); font-size: 0.9rem; margin: 0;">
                &copy; <%= new Date().getFullYear() %> Haydi Hep Beraber. Tüm hakları saklıdır.
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="/js/utils.js"></script>
    <script src="/js/api.js"></script>
    <% if (typeof customScripts !== 'undefined' && Array.isArray(customScripts)) { %>
        <% customScripts.forEach(script => { %>
            <script src="<%= script %>"></script>
        <% }) %>
    <% } %>

    <!-- Auth Handler -->
    <script src="/js/auth.js"></script>

    <!-- Notifications -->
    <script src="/js/notifications.js"></script>
</body>
</html>
